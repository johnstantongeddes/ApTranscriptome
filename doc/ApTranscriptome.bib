	author = {Calabria, G. and Dolgova, O. and Rego, C. and Castañeda, L. E. and Rezende, E. L. and Balanyà, J. and Pascual, M. and Sørensen, J. G. and Loeschcke, V. and Santos, M.},
	year = {2012},
	pages = {691–700},
	file = {Full Text PDF:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/F3QCJ8QU/Calabria et al. - 2012 - Hsp70 protein levels and thermotolerance in Drosop.pdf:application/pdf;Snapshot:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/QUAVDH3Z/full.html:text/html}
