	file = {JSTOR Full Text PDF:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/RR9MXPV3/Krebs and Feder - 1997 - Natural Variation in the Expression of the Heat-Sh.pdf:application/pdf}
},

