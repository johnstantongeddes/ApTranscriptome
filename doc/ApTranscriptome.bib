	keywords = {gene ontology},
	pages = {1600--1607},
	file = {Full Text PDF:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/UPWEJTR5/Alexa et al. - 2006 - Improved scoring of functional groups from gene ex.pdf:application/pdf;Snapshot:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/KHI3RI4V/1600.html:text/html}
