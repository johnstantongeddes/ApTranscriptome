	journal = {Bioinformatics},
	author = {Grossmann, Steffen and Bauer, Sebastian and Robinson, Peter N. and Vingron, Martin},
	month = nov,
	year = {2007},
	note = {{PMID:} 17848398},
	pages = {3024--3031},
	file = {Full Text PDF:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/F8KDNCEM/Grossmann et al. - 2007 - Improved detection of overrepresentation of Gene-O.pdf:application/pdf;Snapshot:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/G4R3UQS9/3024.html:text/html}
