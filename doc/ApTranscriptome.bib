	pages = {645--656},
	file = {Full Text PDF:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/MGRIRXZG/Wardle et al. - 2010 - Long-term aboveground and belowground consequences.pdf:application/pdf;Snapshot:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/AVRG4BEU/10-1223.html:text/html}
