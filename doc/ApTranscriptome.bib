	keywords = {Algorithms, Base Sequence, Gene Expression Profiling, Gene Expression Profiling: methods, Molecular Sequence Data, Reference Values, {RNA}, {RNA:} chemistry, {RNA:} genetics, {RNA:} methods, {RNA:} standards, Sequence Analysis, transcriptome},
	pages = {644–52},
