	pages = {art63},
	file = {Full Text PDF:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/TIT4PD2S/Zelikova et al. - 2011 - The mixed effects of experimental ant removal on s.pdf:application/pdf}
