	date = {2014-04-01},
	file = {JSTOR Full Text PDF:/home/jsg/.zotero/zotero/8cbcgkkc.default/zotero/storage/XW2AWEMH/Murren et al. - 2014 - Evolutionary Change in Continuous Reaction Norms..pdf:application/pdf}
