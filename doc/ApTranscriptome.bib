	journal = {Integr. Comp. Biol.},
	author = {Diamond, Sarah E. and Penick, Clint A. and Pelini, Shannon L. and Ellison, Aaron M. and Gotelli, Nicholas J. and Sanders, Nathan J. and Dunn, Robert R.},
