	file = {Full Text PDF:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/8SGPX8ZQ/Lockwood and Somero - 2012 - Functional Determinants of Temperature Adaptation .pdf:application/pdf;Snapshot:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/2D9Q9FIA/3061.html:text/html}
