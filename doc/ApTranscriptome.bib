	note = {{PMID:} 23672450
{PMCID:} {PMC3663818}},
	file = {PubMed Central Full Text PDF:/home/jsg/.zotero/zotero/8cbcgkkc.default/zotero/storage/AS8VSSHP/Yang and Smith - 2013 - Optimizing de novo assembly of short-read RNA-seq .pdf:application/pdf}
