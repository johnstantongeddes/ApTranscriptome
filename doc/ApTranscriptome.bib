	file = {Full Text PDF:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/P37SWUVG/Hoekstra and Montooth - 2013 - Inducing extra copies of the Hsp70 gene in Drosoph.pdf:application/pdf;Snapshot:/Users/JSG/Library/Application Support/Zotero/Profiles/ft9qulnw.default/zotero/storage/45QMXJMJ/10.html:text/html}
}

