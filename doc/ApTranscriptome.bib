	file = {JSTOR Full Text PDF:/home/jsg/.zotero/zotero/8cbcgkkc.default/zotero/storage/ENIQIBJD/Krebs et al. - 1998 - Heritability of Expression of the 70KD Heat-Shock .pdf:application/pdf}
